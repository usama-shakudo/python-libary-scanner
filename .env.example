# Database Configuration
HYPERPLANE_CUSTOM_SECRET_KEY_SUPABASE_DATABASE_URL=postgresql://postgres:password@supabase-postgresql.hyperplane-supabase.svc.cluster.local:5432/postgres

# PyPI Server Configuration
HYPERPLANE_CUSTOM_SECRET_KEY_PYPI_SERVER_URL=http://pypiserver-pypiserver.hyperplane-pypiserver.svc.cluster.local:8080
HYPERPLANE_CUSTOM_SECRET_KEY_PYPI_USERNAME=username
HYPERPLANE_CUSTOM_SECRET_KEY_PYPI_PASSWORD=password

# Hyperplane GraphQL API (for creating scanner jobs)
HYPERPLANE_CUSTOM_SECRET_KEY_HYPERPLANE_GRAPHQL_URL=http://api-server.hyperplane-core.svc.cluster.local/graphql
HYPERPLANE_DOMAIN=your-domain.com
HYPERPLANE_REALM=Hyperplane
HYPERPLANE_CLIENT_ID=istio

# Authentication (choose one method)
# Method 1: Username/Password
HYPERPLANE_USERNAME=your-username
HYPERPLANE_PASSWORD=your-password

# Method 2: Refresh Token (recommended)
# HYPERPLANE_REFRESH_TOKEN=your-refresh-token

# User Information
HYPERPLANE_CUSTOM_SECRET_KEY_HYPERPLANE_USER_ID=your-user-id
HYPERPLANE_CUSTOM_SECRET_KEY_HYPERPLANE_USER_EMAIL=your-email@domain.com
HYPERPLANE_CUSTOM_SECRET_KEY_HYPERPLANE_VC_SERVER_ID=your-vc-server-id

# Scanner Configuration
HYPERPLANE_CUSTOM_SECRET_KEY_SCANNER_IMAGE=gcr.io/devsentient-infra/custom/hnb/custom/pypiscanningjob:latest
HYPERPLANE_CUSTOM_SECRET_KEY_PYTHON_VERSIONS=3.9 3.10 3.11 3.12
HYPERPLANE_CUSTOM_SECRET_KEY_MAX_CONCURRENT_JOBS=10

# Application Settings
HYPERPLANE_CUSTOM_SECRET_KEY_FLASK_ENV=production
HYPERPLANE_CUSTOM_SECRET_KEY_LOG_LEVEL=INFO
