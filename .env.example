# Database Configuration
DATABASE_URL=postgresql://postgres:password@supabase-postgresql.hyperplane-supabase.svc.cluster.local:5432/postgres

# PyPI Server Configuration
PYPI_SERVER_URL=http://pypiserver-pypiserver.hyperplane-pypiserver.svc.cluster.local:8080
PYPI_USERNAME=username
PYPI_PASSWORD=password

# Hyperplane GraphQL API (for creating scanner jobs)
HYPERPLANE_GRAPHQL_URL=http://api-server.hyperplane-core.svc.cluster.local/graphql
HYPERPLANE_DOMAIN=your-domain.com
HYPERPLANE_REALM=Hyperplane
HYPERPLANE_CLIENT_ID=istio

# Authentication (choose one method)
# Method 1: Username/Password
HYPERPLANE_USERNAME=your-username
HYPERPLANE_PASSWORD=your-password

# Method 2: Refresh Token (recommended)
# HYPERPLANE_REFRESH_TOKEN=your-refresh-token

# User Information
HYPERPLANE_USER_ID=your-user-id
HYPERPLANE_USER_EMAIL=your-email@domain.com
HYPERPLANE_VC_SERVER_ID=your-vc-server-id

# Scanner Configuration
SCANNER_IMAGE=gcr.io/devsentient-infra/custom/hnb/custom/pypiscanningjob:latest
PYTHON_VERSIONS=3.9 3.10 3.11 3.12
MAX_CONCURRENT_JOBS=10

# Application Settings
FLASK_ENV=production
LOG_LEVEL=INFO
